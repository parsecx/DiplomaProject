<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdmiPanel_HealthApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdmiPanel_HealthApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href = "~/adminLTE/css/adminlte.css" />
</head>
<body class="sidebar-mini" style="height: auto">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Головна</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Заявки</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Клієнтські чати</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Статистика</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Управління полісами</a>
                </li>
            </ul>   
        </nav>
        <aside class="main-sidebar main-sidebar-custom sidebar-dark-primary elevation-4">
            <a class="brand-link" href="#">
                <img src="~/adminLTE/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-1" style="opacity: .8">
                <span class="brand-text font-weight-light">Онлайн-кабінет</span>
            </a>
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a href="~/Panel/Main" class="nav-link">
                        <ion-icon name="home-outline"></ion-icon>
                        <p>
                            Головна
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Panel/Applications" class="nav-link">
                        <ion-icon name="person-add-outline"></ion-icon>
                        <p>
                            Заявки
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Panel/Chatting" class="nav-link">
                        <ion-icon name="chatbubbles-outline"></ion-icon>
                        <p>
                            Клієнтські чати
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Panel/Stats" class="nav-link">
                        <ion-icon name="pie-chart-outline"></ion-icon>
                        <p>
                            Статистика
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Panel/Policies" class="nav-link">
                        <ion-icon name="receipt-outline"></ion-icon>
                        <p>
                            Управління полісами
                        </p>
                    </a>
                </li>
            </ul>
        </aside>
        <div class="content-wrapper">
          
                @RenderBody()
       
        </div>
        
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Версія - </b> 0.1 
            </div>
            <strong>Дипмломна робота: <a href="https://github.com/parsecx">Банник Іван К19.1</a>.</strong> 2022-2023
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/ionicons@latest/dist/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
